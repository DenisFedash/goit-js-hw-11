{{#each this}}
<div class="photo-card">
    <a class="gallery_item" href="{{largeImageURL}}">
        <img class="gallery_img" src="{{webformatURL}}" alt="{{tags}}" title={{tags}}loading="lazy" />
    </a>  
  <div class="info">
    <p class="info-item">
      <b>Likes</b>
      {{likes}}
    </p>
    <p class="info-item">
      <b>Views</b>
      {{views}}
    </p>
    <p class="info-item">
      <b>Comments</b>
      {{comments}}
    </p>
    <p class="info-item">
      <b>Downloads</b>
      {{downloads}}
    </p>
  </div>
</div>
{{/each}}